{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["node_modules", "node_modules/@types"],
    "noImplicitOverride": false
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**"]
}